# Database Configuration
DATABASE_URL=postgresql://family_user:family_pass@localhost:5432/family_db

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=family-platform
MINIO_SECURE=false

# Email Configuration (Gmail SMTP example)
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@familyplatform.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_STARTTLS=true
MAIL_SSL_TLS=false
USE_CREDENTIALS=true
VALIDATE_CERTS=true

# Application Configuration
APP_NAME=Family-Centered Relationship Platform
APP_VERSION=1.0.0
DEBUG=true
ALLOWED_HOSTS=["*"]

# Security Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
MAX_UPLOAD_SIZE=10485760
ALLOWED_IMAGE_TYPES=["image/jpeg", "image/png", "image/webp"]

# Redis Configuration
REDIS_URL=redis://localhost:6379

